public class Guitarra {
    // Atributos
    private String marca;
    private String modelo;
    private int numeroDeCordas;
    
    // Construtor
    public Guitarra(String marca, String modelo, int numeroDeCordas) {
        this.marca = marca;
        this.modelo = modelo;
        this.numeroDeCordas = numeroDeCordas;
    }
    
    // MÃ©todos
    public void tocar() {
        System.out.println("Tocando a guitarra " + marca + " " + modelo);
    }
    
    // Getters e Setters
    public String getMarca() {
        return marca;
    }
    
    public void setMarca(String marca) {
        this.marca = marca;
    }
    
    public String getModelo() {
        return modelo;
    }
    
    public void setModelo(String modelo) {
        this.modelo = modelo;
    }
    
    public int getNumeroDeCordas() {
        return numeroDeCordas;
    }
    
    public void setNumeroDeCordas(int numeroDeCordas) {
        this.numeroDeCordas = numeroDeCordas;
    }
}
